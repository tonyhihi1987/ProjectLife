@{ 
    var allIcon = string.Empty;
    var dianeIcon = string.Empty;
    var clementIcon = string.Empty;
    var anyWayIcon = string.Empty;

    var checkIcon = "fa fa-check";
    anyWayIcon = Filter.UserFilter == @UsersConst.AnyWay ? checkIcon : "";
    allIcon = Filter.UserFilter == @UsersConst.All ? checkIcon : "";
    dianeIcon = Filter.UserFilter == @UsersConst.Diane ? checkIcon : "";
    clementIcon = Filter.UserFilter == @UsersConst.Clem ? checkIcon : "";

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectLife</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <link href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="row">
            <div class="col-md-offset-1 col-md-12">
                <div class="col-md-2">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">ProjectLife</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 ">
                    <div class="navbar-collapse collapse">
                        <div class="col-md-6">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-filter="@UsersConst.AnyWay">
                                        @UsersConst.AnyWay  <i class='@anyWayIcon'></i>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-filter="@UsersConst.All">
                                        @UsersConst.All  <i class='@allIcon'></i>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-filter="@UsersConst.Diane">
                                        @UsersConst.Diane <i class='@dianeIcon'></i>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-filter="@UsersConst.Clem">
                                        @UsersConst.Clem <i class='@clementIcon'></i>
                                    </a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" data-toggle="dropdown" class="dropdown-toggle">Type de Projet <b class="caret"></b></a>
                                    <ul class="dropdown-menu" id="menu1">
                                        @Html.RenderAction("DisplayTypes", "Project")
                                    </ul>
                                </li>
                                <li id="new-li">
                                    <button id="new-btn" style="float:right" onclick="setModal()" class="btn-default"><span>Nouveau Projet  <i class="fa fa-plus-square"></i></span></button>
                                </li>
                            </ul>
                            </div>
                        <div class="col-md-6">
                            <form class="navbar-form" role="search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search" name="q">
                                    <div class="input-group-btn">
                                        <button id="search-btn" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="modal">
            @Html.Partial("_EditOrCreate.cshtml", new ProjectViewModel())
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - ProjectLife</p>
        </footer>
    </div>
    <script src="~/js/site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
