<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectLife</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <link href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="row">
            <div class="col-md-offset-2 col-md-12">
                <div class="col-md-2">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">ProjectLife</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 ">
                    <div class="navbar-collapse collapse">
                        <div class="col-md-6">
                            <ul class="nav navbar-nav">

                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Diane</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="About">Clément</a></li>
                                <li id="dropdown-type">
                                    <span>Type</span>
                                    <button tabindex="-1" data-toggle="dropdown" class="btn btn-default dropdown-toggle" type="button">
                                        <span class="caret"></span>
                                    </button>
                                    <ul role="menu" class="dropdown-menu">
                                        <li>
                                            <a href="#">
                                                <input type="checkbox">
                                                <span class="lbl"> Voyage</span>
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="#">
                                                <input type="checkbox">
                                                <span class="lbl"> Enfant</span>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li id="new-li">
                                    <button id="new-btn" data-toggle="modal" data-target="#myModal" class="btn-default"><span>Nouveau Projet  </span><i class="glyphicon glyphicon-list-alt"></i></button>
                                </li>
                            </ul>
                            </div>
                        <div class="col-md-6">
                            <form class="navbar-form" role="search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search" name="q">
                                    <div class="input-group-btn">
                                        <button id="search-btn" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("~/Views/Home/_EditOrCreate.cshtml",new ProjectViewModel())
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - ProjectLife</p>
        </footer>
    </div>
    <script src="~/js/site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
