@model List<ProjectViewModel>
<div id="index">
    @{
        ViewData["Title"] = "Home Page";
        var checkListId = "checkList0";
        int i = 0;
    }

    @foreach (var item in Model)
    {

        var userTag = string.Empty;
        var color = string.Empty;
        switch (item.UserName)
        {
            case "Diane":
                userTag = "D";
                color = "rgb(224, 11, 117)";
                break;
            case "Clément":
                userTag = "C";
                color = "#31708f";
                break;
            case "Tout le monde":
                userTag = "A";
                color = "black";
                break;
            default:
                break;
        }

        <article>
            <div class="row">
                <div class="col-xs-3">
                    <span class="date-created"><i class="fa fa-pencil-square"></i>  @item.CreationDate.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="col-xs-offset-2  col-xs-3">
                    <h1>@item.Name</h1>
                </div>
                <div class="col-xs-offset-2  col-xs-2">
                    <div id="div-update" class="row">
                        <form action="Project/Delete/@item.Id" method="post">
                            <button id="btn-remove" type="submit"><i class="glyphicon glyphicon-remove"></i></button>
                        </form>
                        <button id="btn-modify" onclick="setModal(@item.Id)"><i class="glyphicon glyphicon-pencil"></i></button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-3">
                        <img class="img-responsive" src="@item.Data" />
                    </div>
                    <div class="col-xs-9">
                        <p>@item.Description</p>
                    </div>
                </div>
                <div>
                    <span class="date-target"><i class="fa fa-dot-circle-o"></i>  @item.TargetTime</span>
                </div>
                <span class="user-tag" style="color:@color">@userTag</span>
            </div>
            <div class="row">
                <div data-toggle="collapse" data-target="#@checkListId" class="accordion-toggle">
                    <button class="check-list">Check list <i class="fa fa-caret-down"></i></button>

                </div>
                <div class="check-list">
                    <div class="accordian-body collapse" id="@checkListId">
                        <div class="col-md-3">
                            <input type="checkbox" /> test
                        </div>
                        <div class="col-md-3">
                            <input type="checkbox" /> test
                        </div>


                    </div>
                </div>
            </div>
        </article>
        i++;
        checkListId = $"checklist{i}";
    }
</div>





