@model List<ProjectViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@foreach (var item in Model)
{
    <article>
        <div class="row">
            <div class="col-xs-3">
                <span class="date-created"><i class="fa fa-pencil-square"></i>  @item.CreationDate.ToString("dd/MM/yyyy")</span>
            </div>
            <div class="col-xs-offset-2  col-xs-3">
                <h1>@item.Name</h1>
            </div>
            <div class="col-xs-offset-2  col-xs-2">                
            <div id="btn-update" class="row">
                <button id="btn-modify"><i class="glyphicon glyphicon-pencil"></i></button>
                <button id="btn-remove"><i class="glyphicon glyphicon-remove"></i></button>
            </div>
                </div>
        </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-3">
                        <img class="img-responsive" src="@item.Data" />
                    </div>
                    <div class="col-xs-9">                     
                        <p>@item.Description</p>
                    </div>
                </div>
                <div>
                    <span class="date-target"><i class="fa fa-dot-circle-o"></i>  @item.TargetTime</span>
                </div>
            </div>
      
</article>
}

        




